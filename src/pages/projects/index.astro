---
import Button from '@/components/Button.astro'
import Collapse from '@/components/Collapse.astro'
import Sponsors from '@/components/projects/Sponsors.astro'
import ProjectSection from '@/components/projects/ProjectSection.astro'
import PageLayout from '@/layouts/CommonPage.astro'
import { Image } from 'astro:assets'
import wechat from '@/assets/wechat-qrcode.jpg'
import alipay from '@/assets/alipay-qrcode.jpg'

const headings = [
  {
    depth: 2,
    slug: 'programs',
    text: 'Programs'
  },
  {
    depth: 2,
    slug: 'learnings',
    text: 'Learnings'
  },
]
---

<PageLayout title='Projects' headings={headings} info={{ slug: '/projects', hideComment: true }}>
  <p>Github Activities:</p>
  <p>
    <Image
      src='https://ghchart.rshah.org/659eb9/Cyberyzy'
      alt='github activities'
      inferSize
      loading='eager'
      decoding='async'
    />
  </p>
  <p>
    Display some toy projects and record my progress.
  </p>

  <h2 id='programs'>Programs</h2>
  <ProjectSection
    project={[
      {
        name: 'Hector texteditor',
        description: 'A tiny command-line based texteditor in rustðŸ¦€',
        links: [
          { type: 'github', href: 'https://github.com/Cyberyzy/hecto-windows-edition' },
        ]
      }
    ]}
  />

<h2 id='learnings'>Learnings</h2>
  <ProjectSection
    class='my-2'
    project={[
      {
        name: 'CS61B Learning',
        description: 'Projects and labs and homework of CS61B',
        links: [{ type: 'github', href: 'https://github.com/Cyberyzy' }]
      },
      {
        name: 'Rust learning',
        description: 'Project written in Rust',
        links: [
          {
            type: 'github',
            href: 'https://github.com/Cyberyzy'
          }
        ]
      }
    ]}
  />

<script is:inline type='module' data-astro-rerun>
  import { pageviewCount } from 'https://unpkg.com/@waline/client@v3/dist/pageview.js'

  pageviewCount({
    serverURL: document.querySelector('meta[name="waline-server-url"]').getAttribute('content'),
    path: window.location.pathname
  })
</script>
